<p id="notice"><%= notice %></p>

<h1>Listing Admin Articles</h1>

<table>
  <thead>
    <tr>
      <th>Authorid</th>
      <th>Article header</th>
      <th>Article name</th>
      <th>Article picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_articles.each do |admin_article| %>
      <tr>
        <td><%= admin_article.author_id %></td>
        <td><%= admin_article.article_header %></td>
        <td><%= admin_article.article_name %></td>
        <td><%= admin_article.article_picture %></td>
        <td><%= link_to 'Show', admin_article %></td>
        <td><%= link_to 'Edit', edit_admin_article_path(admin_article) %></td>
        <td><%= link_to 'Destroy', admin_article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

